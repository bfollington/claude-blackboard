{
  "description": "Blackboard hooks for plan capture, orchestration, and context management",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-cli.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "blackboard hook init-db",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "blackboard hook check-resume",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "blackboard hook store-plan",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "blackboard hook inject-orchestration",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "blackboard hook capture-todo",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "blackboard hook update-step-status",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "blackboard hook prompt-reflect",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
